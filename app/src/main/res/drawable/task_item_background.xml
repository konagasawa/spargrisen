<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <stroke android:color="@color/colorTaskListItemOutline" android:width="1dp"/>
                    <solid android:color="@color/colorTaskListItemBackground" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <stroke android:color="@color/colorTaskListItemOutline" android:width="1dp"/>
                    <solid android:color="@color/colorTaskListItemBackgroundPressed" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke android:color="@color/colorTaskListItemOutline" android:width="1dp"/>
            <solid android:color="@color/colorTaskListItemBackground" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
